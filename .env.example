# Personal Task Planner Bot - Environment Configuration
# Copy this file to .env and configure your values

# ===============================
# SERVER CONFIGURATION
# ===============================
PORT=3000
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===============================
# GOOGLE OAUTH & CALENDAR API
# ===============================
GOOGLE_CLIENT_ID=your-google-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-cloud-console
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ===============================
# NOTION API CONFIGURATION
# ===============================
NOTION_TOKEN=secret_your-notion-integration-token
NOTION_TASK_DATABASE_ID=your-notion-database-id-32-characters

# ===============================
# AI CONFIGURATION (Google Gemini)
# ===============================
GEMINI_API_KEY=your-google-gemini-api-key

# ===============================
# WEATHER API (Optional)
# ===============================
OWM_API_KEY=your-openweathermap-api-key
OWM_DEFAULT_CITY=London,GB

# ===============================
# TELEGRAM BOT (Optional)
# ===============================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===============================
# AGENTIC SYSTEM CONFIGURATION
# ===============================
# Auto-start the agent system when server starts
AGENT_AUTO_START=true

# ===============================
# DEVELOPMENT FLAGS
# ===============================
NODE_ENV=development
